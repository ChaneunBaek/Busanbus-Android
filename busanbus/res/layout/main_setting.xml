<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" >

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" >

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|top"
			android:gravity="center_vertical"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/setting_notice"
				android:layout_width="fill_parent"
				android:layout_height="56dip"
				android:background="@drawable/list_selector"
				android:gravity="center_vertical"
				android:paddingLeft="12dip"
				android:text="공지사항"
				android:textSize="18sp" />

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#D2D2C8" />

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="40dip"
				android:gravity="center_vertical"
				android:paddingLeft="12dip"
				android:text="버전정보"
				android:textSize="18sp" />

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="8dip"
				android:layout_marginRight="8dip"
				android:padding="5dip"
				android:text="@string/ver_info"
				android:textSize="13sp" />

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#D2D2C8" />

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="40dip"
				android:gravity="center_vertical"
				android:paddingLeft="12dip"
				android:text="개발자 정보"
				android:textSize="18sp" />

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="8dip"
				android:layout_marginRight="8dip"
				android:autoLink="all"
				android:linksClickable="true"
				android:padding="5dip"
				android:text="@string/profile"
				android:textSize="13sp" />

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#D2D2C8" />

			<TextView
				android:id="@+id/setting_update"
				android:layout_width="fill_parent"
				android:layout_height="56dip"
				android:background="@drawable/list_selector"
				android:gravity="center_vertical"
				android:paddingLeft="12dip"
				android:text="업데이트 확인"
				android:textSize="18sp" />

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#D2D2C8" />

			<LinearLayout
				android:id="@+id/setting_textsize_sun"
				android:layout_width="fill_parent"
				android:layout_height="56dip"
				android:background="@drawable/list_selector"
				android:gravity="center_vertical"
				android:paddingLeft="12dip"
				android:paddingRight="12dip" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="56dip"
					android:layout_weight="1"
					android:clickable="false"
					android:gravity="center_vertical"
					android:text="글자크기"
					android:textSize="18sp" />

				<TextView
					android:id="@+id/setting_textsize_value"
					android:layout_width="wrap_content"
					android:layout_height="56dip"
					android:layout_marginRight="2dip"
					android:clickable="false"
					android:gravity="center_vertical"
					android:textColor="#42609C"
					android:textSize="16sp"
					android:textStyle="bold" />
			</LinearLayout>

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#D2D2C8" />

			<LinearLayout
				android:id="@+id/setting_arrive_sun"
				android:layout_width="fill_parent"
				android:layout_height="56dip"
				android:background="@drawable/list_selector"
				android:gravity="center_vertical"
				android:paddingLeft="12dip"
				android:paddingRight="12dip" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="56dip"
					android:layout_weight="1"
					android:clickable="false"
					android:gravity="center_vertical"
					android:text="도착정보 빠른순으로 정렬"
					android:textSize="18sp" />

				<ImageView
					android:id="@+id/setting_check_arrive_sun"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:clickable="false" />
			</LinearLayout>

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#D2D2C8" />

			<LinearLayout
				android:id="@+id/setting_favorite_start"
				android:layout_width="fill_parent"
				android:layout_height="56dip"
				android:background="@drawable/list_selector"
				android:gravity="center_vertical"
				android:paddingLeft="12dip"
				android:paddingRight="12dip" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="56dip"
					android:layout_weight="1"
					android:clickable="false"
					android:gravity="center_vertical"
					android:text="즐겨찾기에서 시작"
					android:textSize="18sp" />

				<ImageView
					android:id="@+id/setting_check_favorite_start"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:clickable="false" />
			</LinearLayout>

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#D2D2C8" />

			<LinearLayout
				android:id="@+id/setting_favorite_location"
				android:layout_width="fill_parent"
				android:layout_height="56dip"
				android:background="@drawable/list_selector"
				android:gravity="center_vertical"
				android:paddingLeft="12dip"
				android:paddingRight="12dip" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="56dip"
					android:layout_weight="1"
					android:clickable="false"
					android:gravity="center_vertical"
					android:text="즐겨찾기탭 위치기억"
					android:textSize="18sp" />

				<ImageView
					android:id="@+id/setting_check_favorite_location"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:clickable="false" />
			</LinearLayout>

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#D2D2C8" />
		</LinearLayout>
	</ScrollView>

</LinearLayout>